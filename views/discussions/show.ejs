<h1 class="center">Discussion Data for <%= discussion.title %></h1>

<table class="table">
  <tr>
    <th>Title</th>
    <td><%= discussion.title %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= discussion.description%></td>
  </tr>
  <tr>
    <th>Max Students</th>
    <td><%= discussion.maxStudents%></td>
  </tr>
  <tr>
    <th>Cost</th>
    <td>$ <%= discussion.cost%></td>
  </tr>
</table>

<div>
  <a class="button" href="<%=`/discussions/${discussion._id}/edit`%>">
    Edit Discussion Details
  </a>
</div>
<div>
  <a
    class="button"
    href="<%= `/discussions/${discussion._id}/delete?_method=DELETE` %>"
    onclick="return confirm('Are you sure you want to delete this record?')"
    a
    >Delete</a
  >
</div>
<div>
  <a class="button" href="/discussions">View all discussions</a>
</div>
