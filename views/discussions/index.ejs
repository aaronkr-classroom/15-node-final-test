<!-- views/discussions/index.ejs -->

<main class="">
  <div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="pt-5 pb-5">
      <h1>Discussions</h1>
      <p>Here are all our current discussions.</p>

      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Preview</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% discussions.forEach(discussion => { %>
          <tr>
            <td>
              <a href="<%= `/discussions/${discussion._id}` %>">
                <%= discussion.title %>
              </a>
            </td>
            <td><%= discussion.description %></td>
            <td>
              <a href="<%=`discussions/${discussion._id}/edit`%>"> Edit </a>
            </td>
            <td>
              <a
                href="<%= `discussions/${discussion._id}/delete?_method=DELETE` %>"
                onclick="return confirm('Are you sure you want to delete this record?')"
                a
                >Delete</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <div class="mt-5 text-center">
        <a href="/discussions/new" class="btn btn-primary"
          >Add New Discussion</a
        >
        <a
          href="/"
          class="btn ut-red disabled"
          role="button"
          aria-disabled="true"
          >Delete All Discussions</a
        >
      </div>
    </div>
  </div>
</main>
